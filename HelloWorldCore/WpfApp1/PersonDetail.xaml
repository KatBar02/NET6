<Window x:Class="WpfApp1.PersonDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Detail Osoby" Height="Auto" Width="300">
    <StackPanel x:Name="PersonDetail1" Orientation="Vertical" Background="#FF734BDC">
        <Label FontSize="24" Margin="5,0,15,0">Jméno:</Label>
        <TextBox x:Name="txtFirstName" FontSize="24" Background="White" Margin="15,0,15,0"></TextBox>
        <Label FontSize="24" Margin="5,0,0,0">Příjmení:</Label>
        <TextBox x:Name="txtLastName" FontSize="24" Background="White" Margin="15,0,15,0"></TextBox>
        <Label FontSize="24" Margin="5,0,0,0">Datum narození:</Label>
        <TextBox x:Name="txtBirthDate" FontSize="24" Background="White" Margin="15,0,15,0"></TextBox>
        <Button x:Name="btnSafe" Content="Save" Height="28" Width="100" Background="#FF88D381" Margin="0,15,0,15" FontWeight="Bold" FontSize="14" Click="Button_Click"/>

    </StackPanel>
</Window>
